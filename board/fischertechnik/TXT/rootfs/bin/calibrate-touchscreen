#!/bin/sh

calibrate() {
	sudo TSLIB_TSDEVICE=/dev/input/event0 /usr/bin/ts_calibrate
	touch /home/ftc/.reset-touchscreen-calibration
}

commit() {
	rm -f /home/ftc/.reset-touchscreen-calibration
}

reset() {
	sudo reset-touchscreen-calibration
	commit
}

case "$1" in
        calibrate)
                calibrate
                ;;
        commit)
                commit
                ;;

        reset)
                reset
                ;;

        *)
                echo "Usage: $0 {calibrate|commit|reset}"
                exit 1
esac
